{
  "name": "github-readme-card",
  "version": "1.0.0",
  "description": "Github README Card",
  "main": "index.js",
  "_moduleAliases": {
    "@": "dist"
  },
  "watch": {
    "build:css": {
      "patterns": [
        "src/www",
        "pages"
      ],
      "extensions": "pug,css",
      "quiet": true
    },
    "build:html": {
      "patterns": [
        "src/www"
      ],
      "extensions": "pug",
      "quiet": true
    }
  },
  "scripts": {
    "copy": "shx mkdir -p public && shx cp pages/favicon.ico public && shx cp pages/robots.txt public",
    "build:tsc": "tsc",
    "build:css": "postcss pages/style.css -o public/style.css",
    "build:html": "node --no-warnings dist/www/views.js",
    "build:svg": "node --no-warnings dist/export/exportAll.js",
    "build": "npm run copy && npm run build:tsc && npm run build:html && npm run build:css && npm run build:svg",
    "start": "node --no-warnings dist/index.js",
    "dev": "npm run build && concurrently \"tsc --watch\" \"nodemon --no-warnings -q dist/index.js\" \"npm-watch\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/MR-Addict/github-readme-card.git"
  },
  "keywords": [
    "github",
    "repository",
    "card",
    "state"
  ],
  "author": "MR-Addict",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/MR-Addict/github-readme-card/issues"
  },
  "homepage": "https://github.com/MR-Addict/github-readme-card#readme",
  "dependencies": {
    "body-parser": "^1.20.2",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "pug": "^3.0.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.3",
    "@types/pug": "^2.0.6",
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "module-alias": "^2.2.2",
    "nodemon": "^2.0.21",
    "npm-watch": "^0.11.0",
    "postcss-cli": "^10.1.0",
    "postcss-minify": "^1.1.0",
    "shx": "^0.3.4",
    "tailwindcss": "^3.2.7",
    "typescript": "^4.9.5"
  }
}
